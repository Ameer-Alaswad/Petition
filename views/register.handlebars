<div id="register">
    {{#if error}}
    <h1>{{errorMessage}}</h1>
    {{/if}}
    <h1 id="register-title">Sign up to help us with our cause</h1>
    <form action="/register" method="POST">
        <div>
            <h1>First Name</h1>
            <input placeholder="name" type="text" name="first_name">
        </div>
        <div>
            <h1>Last Name</h1>
            <input placeholder="last name" type="text" name="last_name">
        </div>
        <div>
            <h1>Email</h1>
            <input placeholder="email" type="email" name="email">
        </div>
        <div>
            <h1>Password</h1>
            <input placeholder="password" type="password" name="password_hash">
        </div>
        <button><img src="/icons/paw-black.png" alt="">
            <h4 class="btnText">sign up</h4>
        </button>
    </form>
</div>