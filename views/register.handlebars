<div id="register">
    {{#if error}}
    <h1>{{errorMessage}}</h1>
    {{/if}}
    <h1 class="title">Sign up to help us with our cause</h1>
    <form action="/register" class="container" method="POST">
        <div>
            <h1>First Name</h1>
            <input placeholder="name" type="text" name="first_name">
        </div>
        <div>
            <h1>Last Name</h1>
            <input placeholder="last name" type="text" name="last_name">
        </div>
        <div>
            <h1>Email</h1>
            <input placeholder="name@hotmail.com" type="email" name="email" required>
        </div>
        <div>
            <h1>Password</h1>
            <input placeholder="password" type="password" name="password_hash">
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button class="button"><img src="/icons/paw-black.png" alt="">
            <h4 class="btnText">sign up</h4>
        </button>
    </form>
</div>